<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/oneri"
    android:background="#e0e0e0"
    android:backgroundTint="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".oneri_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/oneritext"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="#F9F3E3"
        android:textColor="@color/black"
        android:hint="Öneri ve İstekleriniz"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_gravity="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_kyd"
        android:backgroundTint="#78909c"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="30dp"
        android:onClick="kydt"
        android:text="Kaydet"
        app:layout_constraintTop_toBottomOf="@+id/oneritext" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>