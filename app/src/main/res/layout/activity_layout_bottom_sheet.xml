<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_sheet_batirik"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_sheet_container_batirik"
            android:layout_margin="20dp"
            android:background="@drawable/bottom_sheet_batirik">

            <TextView
                android:id="@+id/text_batirik_bottom_sheet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Batırık; bulgur ile yapılan bir çeşit sulu salatadır. İçindeki domates, salatalık ve bulgurdan ötürü kısırı andırır. İç Anadolu bölgesinin güneyi ve Akdeniz bölgesinde Toros dağlarına yakın bölgelerde,Karaman,Bozkır, Ermenek ile Mersin'in ilçeleri Tarsus, Erdemli, Mut, Aydıncık, Anamur, Bozyazı, Silifke ve Gülnar'da yapılır."
                android:layout_marginTop="15dp"
                android:textSize="16sp" />
        </RelativeLayout>


    </LinearLayout>

</ScrollView>
